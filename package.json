{
  "name": "justscales",
  "private": true,
  "version": "1.1.6",
  "type": "module",
  "main": "dist-electron/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/user/JustScales.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on tcp:5173 && tsc -p tsconfig.electron.json && electron .\"",
    "electron:build": "tsc -b && vite build && tsc -p tsconfig.electron.json && electron-builder",
    "release:verify": "npm run lint && npm run build",
    "android:init": "cap add android",
    "android:sync": "cap sync android",
    "android:open": "cap open android",
    "release": "node scripts/release-manager.js"
  },
  "description": "Simple vocal practicing tool for singers",
  "author": "Victor Padilla Prado (Acuario)",
  "build": {
    "appId": "com.justscales.app",
    "productName": "Just Scales",
    "copyright": "Copyright Â© 2026 Victor Padilla Prado (Acuario)",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "zip",
      "icon": "resources/icon.png"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ]
  },
  "dependencies": {
    "@capacitor/android": "^8.0.2",
    "@capacitor/cli": "^8.0.2",
    "@capacitor/core": "^8.0.2",
    "clsx": "^2.1.1",
    "framer-motion": "^12.29.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0",
    "tone": "^15.1.22",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "chalk": "^5.6.2",
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "execa": "^9.6.1",
    "fs-extra": "^11.3.3",
    "globals": "^16.5.0",
    "inquirer": "^13.2.2",
    "postcss": "^8.5.6",
    "semver": "^7.7.3",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.3"
  }
}
